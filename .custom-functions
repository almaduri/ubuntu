# Run app in background
function b() {
  ($@ &)
}

# Open in VS Code
function c() {
  if [ $# -eq 0 ];
  then
    code .
  else
    code $1
  fi
}

# XDG
function xd() {
  if [ $# -eq 0 ];
  then
    xdg-open .
  else
    xdg-open $1
  fi
}

function mac() {
  b google-chrome --profile-directory="Default" --incognito --force-dark-mode https://almaduri.github.io/mac-address-fetch/ && b google-chrome --profile-directory="Default" --incognito --force-dark-mode http://192.168.100.1/ && exit
}